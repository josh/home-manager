{
  "name": "Nix",
  "image": "mcr.microsoft.com/devcontainers/base:alpine",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "extraNixConfig": "experimental-features = nix-command flakes"
    }
  },
  "postCreateCommand": "nix run github:nix-community/home-manager -- switch -b bak --flake .",
  "postStartCommand": "nix shell nixpkgs#acl --command setfacl -k /tmp"
}
